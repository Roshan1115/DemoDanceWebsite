extends base.pug

block scripts
    script(src="/static/index.js")

block style
    style
        include ../static/style.css
        include ../static/ContactStyle.css

block content
    .ContactBG
        form(action="/contact", method= "post")
            .form_content
                label(for="Name") Name: 
                input(type="text" name="Name" placeholder="Enter Your Name")
            .form_content
                label(for="Age") Age: 
                input(type="number" name="Age" placeholder="Enter Your Age")
            .form_content
                label(for="Gender") Gender:  
                input(type="text" name="Gender" placeholder="Enter Your Gender")
            .form_content
                label(for="Contact-No") Contact Number:  
                input(type="number" name="Contact-No" placeholder="Enter Your Contact No.")
            .form_content
                label(for="Email") Email:  
                input(type="email" name="Email" placeholder="Enter Your Email")
            .form_content
                label(for="Message") Your Message: 
                textarea(name="Message", cols="30", rows="7" placeholder='Write Something about your opinion')
            .form_content
                button.btn
                    | Submit
